<h1><%= @cocktail.name %></h1>

<ul>
  <li><% @cocktail.doses.each do |dose| %></li>
    <li><%= dose.ingredient.name %> : <%= dose.description %>
        <%= link_to "", dose_path(@cocktail),
          class: "fa fa-trash", method: :delete,
          data: { confirm: "Are your sure you want to delete this ingredient?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a dose!', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

<%= link_to 'Back to the cocktails...', cocktails_path, class: "btn btn-secondary" %>
